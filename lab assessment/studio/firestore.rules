/**
 * Firestore Security Rules for LabTracker Pro
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership and role-based model. Data access
 * is scoped to the authenticated user's role (teacher or student) and their
 * direct relationship to the data. Teachers own their courses, students own their
 * enrollments, and access to student-specific data (like attendance) is shared
 * between the relevant student and teacher. The default posture is to deny
 * access unless explicitly granted.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ===================================================================
    // Helper Functions
    // ===================================================================

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isTeacher() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }

    function isStudent() {
        return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student';
    }

    function getParentEnrollment(enrollmentId) {
      return get(/databases/$(database)/documents/enrollments/$(enrollmentId));
    }

    function isCourseTeacher(enrollmentId) {
      let enrollment = getParentEnrollment(enrollmentId);
      return isSignedIn() && enrollment.data.teacherId == request.auth.uid;
    }
    
    function isRelatedToEnrollment(enrollmentDoc) {
      return isSignedIn() && (request.auth.uid == enrollmentDoc.data.studentId || request.auth.uid == enrollmentDoc.data.teacherId);
    }
    
    // ===================================================================
    // Collection Rules
    // ===================================================================

    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if false;
      allow write: if isOwner(userId);
    }

    match /courses/{courseId} {
        allow get: if isSignedIn();
        allow list: if isTeacher(); // Teachers can list courses, students query by enrollment
        allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
        allow update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
    }
    
    match /courseJoinCodes/{joinCode} {
        allow get: if isStudent();
        allow create: if isTeacher(); // Only teachers can create join codes (done via course creation)
        allow update, delete, list: if false;
    }

    match /enrollments/{enrollmentId} {
      allow get: if isRelatedToEnrollment(resource);
      allow list: if isSignedIn(); // Secure via client-side queries
      allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
      allow update: if isOwner(resource.data.studentId) || isOwner(resource.data.teacherId);
      allow delete: if isOwner(resource.data.studentId);
    }

    match /enrollments/{enrollmentId}/{subcollection}/{recordId} {
      allow read: if isRelatedToEnrollment(getParentEnrollment(enrollmentId));
      allow write: if isCourseTeacher(enrollmentId);
    }
  }
}
